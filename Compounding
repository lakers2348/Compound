        }

        .item-label {
            color: #2c3e50;
            font-size: 15px;
            width: 65%;
            line-height: 1.4;
        }

        .item-value {
            font-weight: 500;
            text-align: right;
            width: 35%;
            color: #1a73e8;
        }

        input {
            width: 100%;
            padding: 10px 15px;
            border: 2px solid #dfe3e8;
            border-radius: 8px;
            font-size: 16px;
            text-align: right;
            color: #2c3e50;
